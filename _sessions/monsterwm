#!/bin/sh

xrdb -merge $HOME/.Xresources
xmodmap $HOME/.Xmodmap

for f in /etc/X11/xinit/xinitrc.d/?*.sh ; do
  [ -x "$f" ] && . "$f"
done
unset f

source ~/.xinitrc

~/.fehbg &
numlockx &
xsetroot -cursor_name left_ptr &
compton -CG --no-fading-openclose &
~/dotfiles/_wm/lemons/citrus &
mpd &> /dev/null &
urxvt &

exec ~/dotfiles/_wm/monsterwm/monsterwm 1> ~/.mwmout 2> ~/.mwmerr
