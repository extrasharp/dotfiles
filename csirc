; ~/.csirc

(use
  extras
  )

(define (dnL . args)
  (display (string-intersperse (map ->string args)))
  (newline))

(define (show-banner)
  (dnL #<<BANNER
/|_|o/|/|_|\|/_/|_||_|v||_
\| ||\|\|_| | /\| ||_| ||_
BANNER
))

(toplevel-command 'clear
  (lambda () (system "clear") (show-banner))
  ",clear            clear screen")

(toplevel-command 'ldoc
  (lambda () (use chicken-doc))
  ",ldoc             load documentation")

(show-banner)

; vim: ft=scheme
